{
  "name": "nostr-bakery",
  "version": "0.1.0",
  "description": "A headless nostr client and relay",
  "type": "module",
  "bin": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepack": "pnpm build",
    "start": "node .",
    "dev": "DATA_PATH=./data nodemon --loader @swc-node/register/esm src/index.ts",
    "mcp": "mcp-inspector node . --mcp",
    "mcp-debug": "mcp-inspector node --inspect-brk . --mcp",
    "build": "tsc",
    "test": "vitest run --passWithNoTests",
    "generate": "drizzle-kit generate",
    "format": "prettier -w .",
    "prerelease-next": "pnpm build",
    "release-next": "changeset version --snapshot next && changeset publish --tag next --no-git-tag && git reset --hard HEAD && git clean -fd"
  },
  "files": [
    "dist",
    "drizzle"
  ],
  "keywords": [
    "nostr",
    "relay"
  ],
  "author": "hzrd149",
  "license": "MIT",
  "dependencies": {
    "@diva.exchange/i2p-sam": "^5.4.2",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@noble/hashes": "^1.8.0",
    "@satellite-earth/core": "^0.5.0",
    "applesauce-accounts": "^1",
    "applesauce-actions": "^1",
    "applesauce-core": "^1",
    "applesauce-factory": "^1",
    "applesauce-loaders": "^1",
    "applesauce-relay": "^1",
    "applesauce-signers": "^1",
    "better-sqlite3": "^11.9.1",
    "blossom-client-sdk": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "debug": "^4.4.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "express": "^4.21.2",
    "get-port": "^7.1.0",
    "hash-sum": "^2.0.0",
    "holesail-server": "^1.4.4",
    "hyper-address": "^0.1.3",
    "hyper-socks5-proxy": "^0.1.2",
    "hyperdht": "^6.20.5",
    "import-meta-resolve": "^4.1.0",
    "lodash.throttle": "^4.1.1",
    "lowdb": "^7.0.1",
    "markdown-table": "^3.0.4",
    "mkdirp": "^3.0.1",
    "nanoid": "^5.1.5",
    "node-graceful-shutdown": "^1.1.5",
    "nostr-bakery-common": "workspace:^",
    "nostr-tools": "^2.12.0",
    "pac-proxy-agent": "^7.2.0",
    "process-streams": "^1.0.3",
    "qrcode-terminal": "^0.12.0",
    "rx-nostr": "^3.6.1",
    "rxjs": "^7.8.2",
    "streamx": "^2.22.0",
    "unique-names-generator": "^4.7.1",
    "web-push": "^3.6.7",
    "ws": "^8.18.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@modelcontextprotocol/inspector": "^0.8.2",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.11.22",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/hash-sum": "^1.0.2",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^22.15.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.30.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "nodemonConfig": {
    "ignore": [
      "data/**"
    ],
    "exec": "node",
    "signal": "SIGTERM"
  },
  "packageManager": "pnpm@9.14.4"
}
